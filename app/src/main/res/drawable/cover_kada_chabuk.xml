<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient - Rich brown leather -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#8B6F47"
                android:centerColor="#6B4423"
                android:endColor="#4A2F1A"
                android:type="linear"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Outer decorative border - Gold -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#D4AF37"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>
