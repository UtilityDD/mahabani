<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Suble shadow (Oval) -->
    <item android:top="1dp" android:left="1dp" android:bottom="0.5dp" android:right="0.5dp">
        <shape android:shape="oval">
            <solid android:color="#22000000"/>
        </shape>
    </item>
    
    <!-- White/Cream sticker background (Round) -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="oval">
            <solid android:color="#F5F5DC"/>
            <stroke android:width="1dp" android:color="#DCDCAA"/>
        </shape>
    </item>
</layer-list>
