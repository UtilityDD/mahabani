<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient - Burgundy -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#924F57"
                android:centerColor="#722F37"
                android:endColor="#521F27"
                android:type="linear"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Border -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFD700"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>
