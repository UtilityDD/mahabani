<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <!-- Header image - moved outside the ScrollView to act as a background -->
    <ImageView
        android:id="@+id/imageViewHeader"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/chapter_header_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/thakur1" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:paddingBottom="16dp">

            <!-- Spacer to push content below the parallax image -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />


            <!-- Centered Header Text Section -->
            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                style="@style/ChapterDetailHeading.TextView"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                tools:text="Chapter Title" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                style="@style/ChapterDetailMetadata.TextView"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                tools:text="January 1, 2024" />

            <TextView
                android:id="@+id/textViewWriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                style="@style/ChapterDetailMetadata.TextView"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                tools:text="Writer Name" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:clipToPadding="false"
                style="@style/ChapterBody.TextView"
                android:fontFamily="@font/tiro_bangla_regular"
                android:lineSpacingMultiplier="1.6"
                android:shadowColor="#00000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:breakStrategy="high_quality"
                tools:text="This is the detailed content..." />

            <!-- End of chapter marker -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>

            <!-- Spacer to prevent the scroll-to-top button from covering the last line -->
        </LinearLayout>
    </ScrollView>

    <!-- Binding Shadow (Gutter Effect) -->
    <View
        android:id="@+id/binding_shadow"
        android:layout_width="12dp"
        android:layout_height="0dp"
        android:background="@drawable/binding_gutter_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_scroll_to_top"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        android:background="@drawable/scrim_background_button"
        android:contentDescription="Scroll to top"
        android:src="@drawable/ic_arrow_upward"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/button_font_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/scrim_background_button"
        android:contentDescription="Adjust font size"
        android:src="@drawable/ic_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.blackgrapes.kadachabuk.BreathingOrbView
        android:id="@+id/breathingOrb"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.6"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_tts"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/scrim_background_button"
        android:contentDescription="Read aloud"
        android:src="@drawable/ic_speaker"
        app:layout_constraintEnd_toStartOf="@+id/button_font_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_bookmark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/scrim_background_button"
        android:contentDescription="Bookmark this chapter"
        android:src="@drawable/ic_bookmark_border"
        app:layout_constraintEnd_toStartOf="@+id/button_tts"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/scrim_background_button"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/search_navigation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:background="@drawable/serial_background"
        android:elevation="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button_previous_match"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_expand_less_22px"
            android:contentDescription="Previous match"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/text_view_match_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurface"
            tools:text="1 of 10" />

        <ImageButton
            android:id="@+id/button_next_match"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_expand_more_22px"
            android:contentDescription="Next match"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Custom Text Selection Menu (Initially Hidden) -->
    <include
        layout="@layout/custom_text_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />
        
    <!-- Reading History Overlay (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/reading_history_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:alpha="0" 
        android:background="@drawable/reading_history_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/button_scroll_to_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="1"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text_view_reading_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="You are reading this chapter for 3 times, total reading time 1 H, 25 m" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
